<div class="l-page">
  <div class="l-header">
    <h2>Highlighted Call-Out with CTA</h2>
  </div>
  {{#module-embed as |iframe postMessage|}}
    <div class="module-embed__column">
      {{component iframe src=model.callToAction name="call-to-action"}}
    </div>
    
    <div class="module-embed__column">
      {{labelled-input key='headline' onInput=postMessage}}
      {{#labelled-input key='summary' onInput=postMessage as |input|}}
        Short blurb
        {{input.field}}
      {{/labelled-input}}
      {{#labelled-input key='callToAction' onInput=postMessage as |input|}}
        Button text (If left blank, no button will appear) 
        {{input.field}}
      {{/labelled-input}}
      {{#labelled-input key='url' onInput=postMessage as |input|}}
        URL for the button 
        {{input.field}}
      {{/labelled-input}}
    </div>
  {{/module-embed}}
</div>
