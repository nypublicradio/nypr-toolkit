<div class="l-page">
  
  {{#module-embed required=['url', 'headline'] as |embed|}}
    {{#embed.header as |header|}}
      {{#header.title}}Call-to-Action Tool{{/header.title}}
      
      {{#header.blurb}}
        Contains a headline, a short blurb, and an optional call-to-action button. Use this to encourage users to take a survey, join a Facebook group, post with a particular hashtag, etc.
      {{/header.blurb}}
    {{/embed.header}}
    
    {{#embed.column as |expand|}}
      <span class="iframe-label">Preview</span>
      {{embed.iframe src=model.callToAction name="call-to-action" expand=expand}}
    {{/embed.column}}
    
    {{#embed.column}}
      {{embed.input key='headline'}}
      
      {{#embed.input key='summary' as |input|}}
        {{#input.label}}
          Short blurb
        {{/input.label}}
        {{input.field}}
      {{/embed.input}}
      
      {{#embed.input key='callToAction' as |input|}}
        {{#input.label}}
          Button text (If left blank, no button will appear) 
        {{/input.label}}
        {{input.field}}
      {{/embed.input}}
      
      {{#embed.input key='url' as |input|}}
        {{#input.label}}
          URL for the button 
        {{/input.label}}
        {{input.field placeholder="http://website.com"}}
      {{/embed.input}}
      
      {{embed.generateButton}}
      
    {{/embed.column}}
  {{/module-embed}}
  
  <hr />
  
  {{#module-embed as |embed|}}
    {{#embed.header as |header|}}
      {{#header.title}}Newsletter Sign-up Tool{{/header.title}}
      {{#header.blurb}}
        An easy way to quickly let users sign up for a mailing list. 
      {{/header.blurb}}
    {{/embed.header}}
    
    {{#embed.column as |expand|}}
      {{embed.iframe src=model.newsletterSignup name="newsletter-signup" expand=expand}}
    {{/embed.column}}
    
    {{#embed.column}}
      {{embed.input key='mailchimpId'}}
      
      {{embed.generateButton}}
    {{/embed.column}}
  {{/module-embed}}
</div>
