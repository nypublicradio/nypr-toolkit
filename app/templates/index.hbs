<div class="l-page">
  <div class="l-header">
    <h2>Highlighted Call-Out with CTA</h2>
  </div>
  {{#module-embed as |embed|}}
    {{#embed.column}}
      {{embed.iframe src=model.callToAction name="call-to-action"}}
    {{/embed.column}}
    
    {{#embed.column}}
      {{labelled-input key='headline' onInput=embed.sendMessage}}
      
      {{#labelled-input key='summary' onInput=embed.sendMessage as |input|}}
        Short blurb
        {{input.field}}
      {{/labelled-input}}
      
      {{#labelled-input key='callToAction' onInput=embed.sendMessage as |input|}}
        Button text (If left blank, no button will appear) 
        {{input.field}}
      {{/labelled-input}}
      
      {{#labelled-input key='url' onInput=embed.sendMessage as |input|}}
        URL for the button 
        {{input.field placeholder="http://website.com"}}
      {{/labelled-input}}
      
      {{embed.generateButton}}
      
    {{/embed.column}}
  {{/module-embed}}
  
  <div class="l-header">
    <h2>Newsletter Signup</h2>
  </div>
  {{#module-embed as |embed|}}
    {{#embed.column}}
      {{embed.iframe src=model.newsletterSignup name="newsletter-signup"}}
    {{/embed.column}}
    
    {{#embed.column}}
      {{labelled-input key='mailchimpId' onInput=embed.sendMessage}}
      
      {{embed.generateButton}}
    {{/embed.column}}
  {{/module-embed}}
</div>
